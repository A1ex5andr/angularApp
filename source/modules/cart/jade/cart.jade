.container.cart(data-ng-controller="CartController as inCart")
    h2 Shopping Cart
    h3(ng-show="inCart.getCount() === 0") Cart is empty
    table.table(ng-hide="inCart.getCount() === 0")
        tr
            th
            th Model
            th Name
            th Qty
            th(class="text-right") Cost
            th(class="text-right") Sum
            th

        tr(data-ng-repeat='product in resultValue=(inCart.items)')
            td.col-sm-2
                img.img-responsive(data-ng-src="{{product.images[1]}}")
            td
                div {{ product.name }}
            td
                div {{ product.model }}
            td
                input.input-mini(type='number', data-ng-model="product.qty", value="1", min="1")
            td(class="text-right")
                div ${{ product.price | number: 2 }}
            td(class="text-right")
                div ${{ product.qty * product.price | number: 2 }}
            td
                a(href="" ng-click="inCart.removeItem($index)") Delete
        tr
            td(colspan="5")
                b Total
            td(class="text-right")
                b ${{resultValue | totalSumPriceQty:'qty':'price' | number: 2 }}
            td &nbsp;